<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto"
 xmlns:tools="http://schemas.android.com/tools"
 xmlns:mapbox="http://schemas.android.com/apk/res-auto"
 android:layout_width="match_parent"
 android:layout_height="match_parent"
 tools:context=".selectLoc">

 <androidx.coordinatorlayout.widget.CoordinatorLayout
  android:layout_width="match_parent"
  android:layout_height="0dp"
  android:layout_marginBottom="32dp"
  app:layout_constraintBottom_toTopOf="@+id/textView"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toTopOf="parent">

  <com.mapbox.mapboxsdk.maps.MapView
   android:id="@+id/mapView"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   mapbox:mapbox_cameraZoom="12" />

 </androidx.coordinatorlayout.widget.CoordinatorLayout>

 <ImageButton
  android:id="@+id/backBtn2"
  android:layout_width="40dp"
  android:layout_height="40dp"
  android:layout_marginStart="8dp"
  android:layout_marginTop="8dp"
  android:background="#00FFFFFF"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toTopOf="parent"
  app:srcCompat="@drawable/back_icon" />

 <TextView
  android:id="@+id/textView"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginBottom="16dp"
  android:fontFamily="@font/roboto_medium"
  android:text="Hospital Name"
  android:textColor="#000000"
  android:textSize="20sp"
  app:layout_constraintBottom_toTopOf="@+id/hospitalName"
  app:layout_constraintStart_toStartOf="@+id/hospitalName" />

 <EditText
  android:id="@+id/hospitalName"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  android:layout_marginStart="16dp"
  android:layout_marginEnd="16dp"
  android:layout_marginBottom="24dp"
  android:background="@drawable/field_txt_rounded"
  android:ems="10"
  android:inputType="textPersonName"
  android:padding="12dp"
  app:layout_constraintBottom_toTopOf="@+id/textView2"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent" />

 <TextView
  android:id="@+id/textView2"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginBottom="16dp"
  android:fontFamily="@font/roboto_medium"
  android:text="Hospital Location"
  android:textColor="#000000"
  android:textSize="20sp"
  app:layout_constraintBottom_toTopOf="@+id/hospitalLoc"
  app:layout_constraintStart_toStartOf="@+id/hospitalName" />

 <EditText
  android:id="@+id/hospitalLoc"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  android:layout_marginStart="16dp"
  android:layout_marginEnd="16dp"
  android:layout_marginBottom="48dp"
  android:background="@drawable/field_txt_rounded"
  android:ems="10"
  android:inputType="textPersonName"
  android:padding="12dp"
  app:layout_constraintBottom_toTopOf="@+id/button_next_loc"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintHorizontal_bias="0.0"
  app:layout_constraintStart_toStartOf="parent" />

 <Button
     android:id="@+id/button_next_loc"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginStart="16dp"
     android:layout_marginEnd="16dp"
     android:layout_marginBottom="16dp"
     android:backgroundTint="@color/btnColor1"
     android:fontFamily="@font/roboto_bold"
     android:padding="14dp"
     android:text="Finish"
     android:textSize="16sp"
     app:cornerRadius="10dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>